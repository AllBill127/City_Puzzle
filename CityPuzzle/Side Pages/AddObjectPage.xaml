<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityPuzzle.AddObjectPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
                <Label Text="Nauja užduotis" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Padding="0,0,0,50"></Label>
            <Entry x:Name="objectName" Placeholder="Objecto pavadinimas" BackgroundColor="White"></Entry>
            <Entry x:Name="objectAbout" Placeholder="Objecto aprašas" BackgroundColor="White"></Entry>
            <Entry x:Name="objectQuest" Placeholder="Objecto užduotis" BackgroundColor="White"></Entry>
            <Entry x:Name="objectImg" Placeholder="Objecto img adresas" BackgroundColor="White"></Entry>
            <Entry x:Name="objectX" Placeholder="Objecto X kordinatės" BackgroundColor="White"></Entry>
            <Entry x:Name="objectY" Placeholder="Objecto Y kordinatės" BackgroundColor="White"></Entry>
            <Label Padding="0,0,0,50"></Label>
            <Button Text="Išsaugoti" Clicked="SaveObject_Clicked" BackgroundColor="Black" TextColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>