<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityPuzzle.AddPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#F3BD21" Padding="24" CornerRadius="10">
                <Label x:Name="PuzzleName" HorizontalOptions="CenterAndExpand" FontSize="36" TextColor="Black" ></Label>
            </Frame>
            <Image x:Name="PuzzleImg" WidthRequest="300" HeightRequest="300"></Image>
            <Frame BackgroundColor="#F3BD21" Padding="24" CornerRadius="10">
                <Label x:Name="PuzzleInfo" HorizontalOptions="CenterAndExpand" FontSize="18" TextColor="Black" ></Label>
            </Frame>
            <Button Text="Prideti" Clicked="AddPuzzle_Clicked" />
            <Button x:Name="nextButton" Text="Kitas" Clicked="NextPuzzle_Clicked" IsVisible="True" />
            <Button x:Name="prevButton" Text="Atgal" Clicked="PrevPuzzle_Clicked" IsVisible="True" />
            <Button Text="Baigti" Clicked="FinishSelecting_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>