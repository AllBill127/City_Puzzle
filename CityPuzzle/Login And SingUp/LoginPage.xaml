<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityPuzzle.LoginPage"
             BackgroundImageSource="logos.pmg" WidthRequest="600" HeightRequest="200">
    <StackLayout>
        <Frame BackgroundColor="#F3BD21" Padding="24" CornerRadius="10">
            <Label Text="Sveiki atvykę į CityPuzzle!" HorizontalTextAlignment="Center" TextColor="Black"   FontSize="36"/>
        </Frame>
        <Label Padding="0,0,0,50"></Label>
        <Entry x:Name="username" Placeholder="Vartotojo vardas"  ClearButtonVisibility="WhileEditing" HorizontalOptions="Fill" BackgroundColor="#F3BD21" ></Entry>
        
        <Entry x:Name="password" Placeholder="Slaptažodis" IsPassword="true" BackgroundColor="#F3BD21" ></Entry>
        <Label Padding="0,0,0,50"></Label>
        <Button x:Name="Login_Clicked" Text="Prisijungti" Clicked="Login_Click" BackgroundColor="#F3BD21"  Padding="0,0,0,0"></Button>
        <Button x:Name="SignIn_Clicked" Text="Registruotis" Clicked="Sign_Click" BackgroundColor="#F3BD21"></Button>

    </StackLayout>

</ContentPage>
